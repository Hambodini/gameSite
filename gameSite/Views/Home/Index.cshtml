@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    @if (!User.Identity.IsAuthenticated)
    {
        <h1>Log in to play more games then shown below. you could win big too!</h1>
    }

    @if (User.IsInRole("Admin"))
    {
        <h1>Admin Actions:</h1>
        <a href="@Url.Action("Index", "PlayerItemsDB", null)">
            <span class="btn btn-primary">Edit Items Owned By Players</span>
        </a>
        <a href="@Url.Action("Index", "ShopItemsDB", null)">
            <span class="btn btn-primary">Edit Items In Store</span>
        </a>
    }

    @if (User.Identity.IsAuthenticated)
    {
        <h1>User Actions:</h1>
        <a href="@Url.Action("IndexByUser", "PlayerItemsDB", null)">
            <span class="btn btn-primary">View Items You Own</span>
        </a>
        <a href="@Url.Action("IndexBuy", "ShopItemsDB", null)">
            <span class="btn btn-primary">View Item Store</span>
        </a>
    }
</div>

