@model gameSite.Models.BlackJackViewModel
@{
    ViewBag.Title = "BlackJackIndex";
}
<div class="jumbotron">
    <h1>Round: @Model.Round</h1>
    <p class="lead">Current Player Count: @Model.PlayerCount</p>
    <p class="lead">Current Bet: @Model.PlayerBet</p>
    <p class="lead">Current House Count: @Model.HouseCount</p>
    @if (Model.GameEnd == true)
    {
        if (Model.DidPlayerWin == true)
        {
            <h1>You Win</h1>
        }
        else
        {
            <h1>You Lose</h1>
        }
    }
</div>
@*player actions*@

<div class="row">
    <div class="col-md-4">
        <form asp-action="BlackJackIndex" method="post">
            <input type="hidden" name="action" value="draw" />
            <input type="submit" value="Draw" />
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="BlackJackIndex" method="post">
            <input type="hidden" name="action" value="stand" />
            <input type="submit" value="Stand" />
        </form>
    </div>
</div>
@*betting options*@
<div class="row">
    <div class="col-md-4">
        @if (Model.DidPlayerBet == false)
        {
            <form asp-action="BlackJackIndex" method="post">
                <input type="hidden" name="action" value="bet" />
                <input type="text" name="amount" />
                <input type="submit" value="Bet" />
            </form>
        }
        @if (Model.DidPlayerDoubleDown == false)
        {
            <form asp-action="BlackJackIndex" method="post">
                <input type="hidden" name="action" value="dd" />
                <input type="submit" value="Double Down" />
            </form>
        }
    </div>
</div>
